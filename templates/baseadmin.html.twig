<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>NdO - {% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.5.0/css/all.css' integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU' crossorigin='anonymous'>
            <link rel='stylesheet' href="{{ 'https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css' }}">
            <link rel='stylesheet' href="{{ 'https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css' }}">
            <link rel="stylesheet" href="{{ asset('http://nuit-orientation.simplon-charleville.fr/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('http://nuit-orientation.simplon-charleville.fr/css/app.css') }}">
        {% endblock %}
    </head>

    <body>
        <header class="navadmin">
            <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
                <a class="navbar-brand" href="#"><i class="fas fa-chart-line"></i>NdO-Dashboard</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        {# <li class="nav-item">
                            <a class="nav-link" href="{{ path('search') }}">Recherche</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('exponent_add') }}">Ajouter un exposant</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mc_add') }}">Ajouter un mot-clé</a>
                        </li> #}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('exponent_list') }}"><i class="fas fa-chalkboard-teacher"></i>Gestion des exposants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mc_list') }}"><i class="fas fa-list"></i>Gestion des mots-clés</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_list') }}"><i class="fas fa-user"></i>Gestion des utilisateurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="{{ path('home') }}"><i class="fas fa-eye"></i>Voir le site</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="accountDropdownLink">{{app.user.name}} {{app.user.firstname}}
                            </a>

                            <div class="dropdown-menu dropdown-menu-left" aria-labelledBy="accountDropdownLink">
                                <a class="nav-link" href="{{ path('admin_logout') }}">Déconnexion <i class="fas fa-sign-in-alt"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
                {% for label,messages in app.flashes %}
                    <div class="messageflash text-center mx-auto ">
                        <div class="alert alert-{{ label }}">
                        {% for message in messages %}
                            <p>{{ message | raw }}</p>
                        {% endfor %}
                        </div>
                    </div>
                {% endfor %}
        </header>

            {% block body %}
            {% endblock %}

        {% block javascripts %}
                <script src="{{ 'http://nuit-orientation.simplon-charleville.fr/js/jquery.js ' }}"></script>
                <script src="{{ 'http://nuit-orientation.simplon-charleville.fr/js/popper.min.js' }}"></script>
                <script src="{{ 'http://nuit-orientation.simplon-charleville.fr/js/bootstrap.min.js' }}"></script>
                <script type="text/javascript" charset="utf8" src="{{ 'https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js' }}"></script>
                 <script type="text/javascript" charset="utf8" src="{{ 'https://code.jquery.com/jquery-3.3.1.js' }}"></script>
                <script type="text/javascript" charset="utf8" src="{{ 'https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js' }}"></script>
                <script type="text/javascript" charset="utf8" src="{{ 'https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js' }}"></script>
                <script src="{{ 'http://nuit-orientation.simplon-charleville.fr/js/tableadmin.js' }}"></script>
        {% endblock %}

    </body>
</html>