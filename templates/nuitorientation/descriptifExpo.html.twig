{% extends 'base.html.twig' %}

{% block title %}Fiche par exposant{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('search') }}">Recherche par mot-clé</a></li>
        <li class="breadcrumb-item"><a href="{{ path('return', {'id' : exponents.id}) }}">Résultats de la recherche</a></li>
        <li class="breadcrumb-item">Détails de l'exposant</li>
    </ol>

    <main class="miseenforme afficheAccueilSansTitre">
        <div class="card mt-5 px-2 text-center ">
            <div class="card-header">Fiche descriptive de l'exposant <span>"{{ exponents.nameexp }}"</span>
            </div>
            <table class="table-responsive table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th scope="row">Secteur d'activité</th>
                        <td>{{ exponents.activity }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Adresse</th>
                        <td class="text-center">rue des exposants 08000 charleville-mézières</td>
                    </tr>
                    <tr>
                        <th scope="row">email</th>
                        <td class="text-center">exemple@exemple.fr</td>
                    </tr>
                    <tr>
                        <th scope="row">site</th>
                        <td class="text-center">wwww.exposant.com</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p class="mt-3">
        <a href="#" class="btn btn-success ml-2">Enregistrer l'exposant</a>
        <a href="{{ path('return', {'id' : exponents.id}) }}" class="btn btn-info ml-3">Retour aux résultats</a>
        </p>
        <p><a href="#" class="btn btn-danger">La carte</a></p>
    </main>
    
{% endblock %}