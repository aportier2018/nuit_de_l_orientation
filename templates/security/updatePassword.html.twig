{% extends 'base.html.twig' %}
{% form_theme formUpdatePassword 'bootstrap_4_layout.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}
{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('user_compte', {id : app.user.id}) }}">Mon compte</a></li>
        <li class="breadcrumb-item"><a href="{{ path('security_profile') }}">Mon profil</a></li>
        <li class="breadcrumb-item">Mon mot de passe</li> 
    </ol>

    <main class="miseenforme afficheAccueilSansTitre">
        <div class="card border-primary my-auto mb-3" style="max-width: 40rem;">
            <div class="card-header">Modifier votre mot de passe</div>

            <div class="card-body">
                {{ form_start(formUpdatePassword) }}
                {# {{ form_widget(formUpdatePassword) }} #}
                    {{ form_row(formUpdatePassword.oldPassword, {'label' : "Votre mot de passe actuel", 'attr' : {'placeholder' : "mot de passe actuel..."}} ) }}
                    {{ form_row(formUpdatePassword.newPassword, {'label' : "Votre nouveau mot de passe", 'attr' : {'placeholder' : "entrez votre nouveau mot de passe"}} ) }}
                    {{ form_row(formUpdatePassword.confirmPassword, {'label' : "Confirmation du nouveau mot de passe", 'attr' : {'placeholder' : "confirmer votre nouveau mot de passe"}} ) }}
                    <button type="submit" class="btn btn-primary">Valider votre nouveau mot de passe</button>
                {{ form_end(formUpdatePassword) }}
            </div>

        </div>
    </main>
{% endblock %}
