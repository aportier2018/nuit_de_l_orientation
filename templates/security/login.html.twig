{% extends "base.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home')}}">Accueil</a></li>
        <li class="breadcrumb-item active">Connexion</li>
    </ol>
    <main class="miseenforme  afficheAccueilSansTitre">

        <form  method="post">
            <legend>Veuillez vous connecter</legend>
            <hr/>

            {% if error %}
            {# <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
            <div class="alert alert-danger">Attention! Une erreur s'est gliss√©e dans l'adresse mail ou le mot de passe.</div>
            {% endif %}

            <div class="form-group">
                <input type="text" class="form-control" placeholder="email@exemple.com" required name="_username" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="mot de passe" required name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Connexion</button>
            </div>
            <a href="{{ path('security_registration') }}"><span>Pas encore inscrit ? C'est par ici !</span></a>
        </form>
    </main>
{% endblock %}