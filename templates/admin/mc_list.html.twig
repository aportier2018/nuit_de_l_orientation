{% extends 'baseadmin.html.twig' %}

{% block title %}Admin - Liste des mots-clés{% endblock %}

{% block body %}
    <div class="container admin">
        <h4 class="my-3 text-center">Gestion des mots-clés</h4>
        <p class="mb-2 text-center"><a href="{{ path('mc_add') }}" class="btn btn-success">Ajouter un mot-clé</a></p>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Mot-clé</th>
                    <th class="text-center">Modification</th>
                    <th class="text-center">Suppression</th>
                </tr>
            </thead>
            <tbody>
                {% for mc in motcle %}
                    <tr>
                        <td class="text-center">{{ mc.id }}</td>
                        <td class="text-center">{{ mc.namemc }}</td>
                        <td class="text-center">
                            <a href="{{ path('mc_edit', {'id': mc.id}) }}" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('mc_delete', {'id': mc.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
    
{% endblock %}